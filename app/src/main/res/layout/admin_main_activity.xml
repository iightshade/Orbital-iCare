<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User's name:"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/usersNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter user's name"
        android:inputType="textPersonName"
        android:layout_toEndOf="@+id/textView10" />

    <Button
        android:id="@+id/adminAccessButton"
        android:layout_below="@+id/usersNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Access"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:textSize="18sp" />


    <ListView
        android:id="@+id/adminListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/adminAccessButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/adminSignOutButton" />

    <Button
        android:id="@+id/adminAddNewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/adminAccessButton" />

    <Button
        android:id="@+id/adminSignOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/adminAccessButton" />


</RelativeLayout>