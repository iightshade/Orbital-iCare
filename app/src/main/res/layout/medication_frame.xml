<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="125dp">


    <ImageView
        android:id="@+id/medicationImageAdapter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/no_image" />

    <TextView
        android:id="@+id/medicationMainTitleAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/medicationImageAdapter"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/expiredTextViewAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Expired"
        android:textSize="35sp"
        android:visibility="gone"/>



</RelativeLayout>