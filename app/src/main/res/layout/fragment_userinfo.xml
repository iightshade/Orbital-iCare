<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The ActionBar displayed at the top -->
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userInfoFragmentToolBar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="Name:"
        android:textSize="22sp"
        android:layout_below="@+id/userInfoFragmentToolBar"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/textView5"
        android:inputType="text"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="NRIC:"
        android:textSize="22sp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:id="@+id/icTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_below="@+id/nameTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Age:"
        android:textSize="22sp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/icTextView"
        android:layout_below="@+id/icTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Sex:"
        android:textSize="22sp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/AllergiesText" />

    <TextView
        android:id="@+id/sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ageTextView"
        android:layout_below="@+id/ageTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/AllergiesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Allergies:"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/allergiesTextView"
        android:layout_alignBottom="@+id/allergiesTextView"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/allergiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sexTextView"
        android:layout_below="@+id/sexTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Chronic\n illness:"
        android:textSize="22sp"
        android:layout_below="@+id/AllergiesText"
        android:layout_alignStart="@+id/textView20" />


    <TextView
        android:id="@+id/chronicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/allergiesTextView"
        android:layout_below="@+id/allergiesTextView"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Other(s):"
        android:textSize="22sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/otherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chronicTextView"
        android:layout_alignTop="@+id/textView20"
        android:padding="5dp"
        android:text=""
        android:textSize="22sp" />

    <Button
        android:id="@+id/editUserInfoButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>