<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Userinfo"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/textView5"
        android:inputType="text"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/icTextView"
        android:padding="5dp"
        android:text="NRIC:"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/icTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_below="@+id/nameTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ageTextView"
        android:padding="5dp"
        android:text="Age:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/icTextView"
        android:layout_below="@+id/icTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/sexTextView"
        android:padding="5dp"
        android:text="Sex:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/sexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ageTextView"
        android:layout_below="@+id/ageTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <TextView
        android:id="@+id/AllergiesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/allergiesTextView"
        android:layout_alignBottom="@+id/allergiesTextView"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="Allergies:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/allergiesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sexTextView"
        android:layout_below="@+id/sexTextView"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chronicTextView"
        android:layout_alignBottom="@+id/chronicTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AllergiesText"
        android:padding="5dp"
        android:text="Chronic\n illness:"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/chronicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/allergiesTextView"
        android:layout_below="@+id/allergiesTextView"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:padding="5dp"
        android:text="Other(s):"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/otherTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/chronicTextView"
        android:layout_alignTop="@+id/textView20"
        android:padding="5dp"
        android:text=""
        android:textSize="18sp"
        android:ems="10"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/saveUserInfoButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cancelUserInfoButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="20sp" />
    </LinearLayout>


</RelativeLayout>